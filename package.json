{
  "name": "student-manager",
  "version": "0.1.0",
  "bin": {
    "student-manager": "bin/student-manager.js"
  },
  "scripts": {
    "build": "nx build student-manager",
    "deploy": "npm run build && npm run cdk:bootstrap:staging && cdk deploy StudentManagerStagingStack",
    "deploy:prod": "npm run build && npm run cdk:bootstrap:prod && cdk deploy StudentManagerProductionStack",
    "destroy": "cdk destroy StudentManagerStagingStack",
    "destroy:prod": "cdk destroy StudentManagerProductionStack",
    "cdk:bootstrap:staging": "cdk bootstrap --app 'npx nx run student-manager:build' --context env=staging",
    "cdk:bootstrap:prod": "cdk bootstrap --app 'npx nx run student-manager:build' --context env=production",
    "cdk": "cdk",
    "test": "jest"
  },
  "devDependencies": {
    "@nrwl/workspace": "^19.8.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.9",
    "aws-cdk": "2.152.0",
    "jest": "^29.7.0",
    "nx": "19.8.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.152.0",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.5",
    "source-map-support": "^0.5.21"
  },
  "nx": {},
  "targets": {
    "build": {
      "executor": "@nrwl/node:build",
      "options": {
        "outputPath": "dist",
        "main": "src/main.ts",
        "tsConfig": "tsconfig.app.json",
        "assets": [
          "src/assets"
        ]
      }
    }
  }
}
