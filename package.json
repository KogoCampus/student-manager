{
  "name": "student-manager",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "bin": {
    "student-manager": "dist/student-manager.js"
  },
  "scripts": {
    "build": "node build.js",
    "bootstrap": "yarn build && cdk bootstrap --context env=staging",
    "deploy": "npm run build && npm run bootstrap:staging && cdk deploy StudentManagerStagingStack",
    "destroy": "cdk destroy StudentManagerStagingStack",
    "bootstrap:prod": "yarn build && cdk bootstrap --context env=production",
    "deploy:prod": "npm run build && npm run bootstrap:prod && cdk deploy StudentManagerProductionStack",
    "destroy:prod": "cdk destroy StudentManagerProductionStack",
    "cdk": "cdk",
    "test": "jest",
    "lint": "eslint lib/**/*.ts src/**/*.ts bin/**/*.ts",
    "format": "prettier .",
    "format:write": "prettier --write ."
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.9",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "aws-cdk": "2.152.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.152.0",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.5",
    "source-map-support": "^0.5.21"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
