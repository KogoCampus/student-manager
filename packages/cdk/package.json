{
  "name": "@student-manager/cdk",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "bin": {
    "student-manager": "dist/cdk/student-manager.js"
  },
  "scripts": {
    "build": "node build.js",
    "dev": "yarn build && bash sam/local-api.sh",
    "bootstrap": "cdk bootstrap --context env=staging",
    "deploy": "cdk deploy --all",
    "destroy": "cdk destroy --all",
    "cdk": "cdk",
    "test": "jest",
    "lint": "eslint lib/**/*.ts src/**/*.ts bin/**/*.ts",
    "format": "prettier .",
    "format:write": "prettier --write .",
    "decrypt": "node decryptSecrets.js --directories ./lib ./sam --region us-west-2 --secret-name /stg/student-manager/secrets"
  },
  "devDependencies": {
    "@aws-sdk/client-secrets-manager": "^3.658.1",
    "@types/aws-lambda": "^8.10.145",
    "@types/js-yaml": "^4.0.9",
    "aws-cdk": "2.152.0",
    "esbuild": "^0.24.0",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.658.1",
    "@aws-sdk/client-ses": "^3.658.1",
    "aws-cdk-lib": "2.152.0",
    "constructs": "^10.0.0",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "redis": "^4.7.0",
    "source-map-support": "^0.5.21"
  }
}
