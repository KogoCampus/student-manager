{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "workspaceLayout": {
    "libsDir": "libs",
    "appsDir": "packages"
  },
  "plugins": [
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "test"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "format"]
      }
    }
  },
  "projects": {
    "cdk": {
      "targets": {
        "build": {
          "executor": "nx:run-commands",
          "outputs": ["dist/packages/cdk"],
          "options": {
            "command": "nx run cdk:build"
          }
        }
      }
    },
    "api-docs": {
      "targets": {
        "generate": {
          "executor": "nx:run-commands",
          "outputs": ["dist/libs/api-docs"],
          "options": {
            "command": "yarn workspace api-docs generate"
          }
        }
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        {
          "target": "generate",
          "projects": "api-docs"
        }
      ]
    }
  },
  "nxCloudId": "66fa3de9208f2808c4863358"
}
